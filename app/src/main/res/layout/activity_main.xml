<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/topLeftCmd"
        android:layout_width="103dp"
        android:layout_height="117dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="30dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/bottomRightCmd"
        android:layout_width="103dp"
        android:layout_height="117dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="44dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middleRightCmd"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bottomCenterCmd"
        android:layout_width="103dp"
        android:layout_height="117dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bottomRightCmd"
        app:layout_constraintStart_toEndOf="@+id/bottomLeftCmd"
        app:layout_constraintTop_toBottomOf="@+id/centerCmd"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bottomLeftCmd"
        android:layout_width="103dp"
        android:layout_height="117dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middleLeftCmd"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/middleLeftCmd"
        android:layout_width="103dp"
        android:layout_height="117dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLeftCmd" />

    <Button
        android:id="@+id/middleRightCmd"
        android:layout_width="103dp"
        android:layout_height="117dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="44dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topRightCmd" />

    <Button
        android:id="@+id/centerCmd"
        android:layout_width="103dp"
        android:layout_height="117dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/middleRightCmd"
        app:layout_constraintStart_toEndOf="@+id/middleLeftCmd"
        app:layout_constraintTop_toBottomOf="@+id/topMiddleCmd" />

    <Button
        android:id="@+id/topMiddleCmd"
        android:layout_width="103dp"
        android:layout_height="117dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="13dp"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/topRightCmd"
        app:layout_constraintStart_toEndOf="@+id/topLeftCmd"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:id="@+id/topRightCmd"
        android:layout_width="103dp"
        android:layout_height="117dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="44dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/playersTurn"
        android:layout_width="99dp"
        android:layout_height="29dp"
        android:layout_marginTop="524dp"
        android:layout_marginBottom="30dp"
        android:text="Hello World!"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/newGame"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/newGame"
        android:layout_width="139dp"
        android:layout_height="48dp"
        android:layout_marginBottom="100dp"
        android:text="@string/new_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playersTurn"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="411dp"
        android:layout_height="78dp"
        android:background="#403F3F"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>